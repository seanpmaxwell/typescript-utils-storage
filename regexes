// Email
EMAIL: /^[^\s@]+@[^\s@]+\.[^\s@]+$/
type TEmail = `${string}@${string}`;

// Color
COLOR: /^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$/
type THexColor = `#${string}`;

// Alphabetic
ALPHABETIC: /^[a-zA-Z]*$/
type TAlphabeticStr = `${string}`;

// AlphaNumeric
ALPHA_NUMERIC: /^[a-zA-Z0-9]*$/
type TAlphaNumericStr = `${string}`;

// URL
URL: /^((https?|ftp|smtp):\/\/)?(www.)?[a-z0-9]+(\.[a-z]{2,}){1,3}(#?\/?[a-zA-Z0-9#]+)*\/?(\?[a-zA-Z0-9-_]+=[a-zA-Z0-9-%]+&?)?$/
TURL = `${string}`;
  
